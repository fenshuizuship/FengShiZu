<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailActivity">

    <com.youth.banner.Banner
        android:id="@+id/detail_banner"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/hui">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/kongxinyuan"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="30天无忧退货"
            android:textSize="@dimen/x8" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/kongxinyuan"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="48小时快速退款"
            android:textSize="@dimen/x8" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/kongxinyuan"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="满88元免邮费"
            android:textSize="@dimen/x8" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:id="@+id/detail_tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/x20"
            android:textStyle="bold" />

        <TextView
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:id="@+id/detail_tv6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/x10" />

        <TextView
            android:maxLines="1"
            android:id="@+id/detail_tv7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y10"
            android:text="@string/app_name"
            android:textColor="@color/red"
            android:textSize="@dimen/x20" />

        <TextView
            android:id="@+id/detail_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/y10"
            android:background="@drawable/web_shap"
            android:padding="10dp"
            android:text="xxx制造商"
            android:textColor="@color/gold" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

       <CheckBox
           android:button="@null"
           android:id="@+id/detail_cb"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="match_parent"
           android:background="@drawable/wujiaoxingk"
           android:layout_gravity="center"
           android:padding="@dimen/y10"
           />

            <ImageView
                android:id="@+id/detail_iv2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/gouwuche"
                />
            <ImageView
                android:layout_width="@dimen/_x20"
                android:layout_height="@dimen/y20"
                android:src="@mipmap/shixinyuan"
                android:layout_marginLeft="-60dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="10"
                android:id="@+id/detail_tv2"
                android:layout_marginLeft="-38dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/detail_tv3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/shop"
                android:textSize="@dimen/y10" />

            <TextView
                android:id="@+id/detail_tv4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/red"
                android:gravity="center"
                android:text="@string/adds"
                android:textColor="@color/white"
                android:textSize="@dimen/x13" />


        </LinearLayout>



    </RelativeLayout>
</LinearLayout>